<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	 <PreceptDef>
		<defName>Females_must_be_slaves</defName>
		<issue>Slavery</issue>
		<label>Female Slavery</label>
		<description>All women need to submit to men as slaves.</description>
		<impact>High</impact>
		<displayOrderInIssue>1</displayOrderInIssue>
		<displayOrderInImpact>999</displayOrderInImpact>
		<associatedMemes>
		  <li>MaleSupremacy</li>
		</associatedMemes>
		<comps>
		  <li Class="PreceptComp_SituationalThought">
			<thought>UnsubjugatedWomen</thought>
		  </li>
		  <li Class="PreceptComp_SituationalThought">
			<thought>AllWomenSlaves</thought>
		  </li>
		  <li Class="PreceptComp_SituationalThought">
			<thought>DisciplinedAWomen</thought>
		  </li>
		  
		</comps>
		<approvesOfSlavery>true</approvesOfSlavery>
	</PreceptDef>

	<ThoughtDef>
		<defName>SubjugatePutOnArmour</defName>
		<durationDays>1</durationDays>
		<stages>
		  <li>
			<label>put on armour</label>
			<description>I was made to put on armour.  I really don't like wearing armour. </description>
			<baseMoodEffect>-30</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>NeedAdmonishing</defName>
		<workerClass>Subjugate.ThoughtWorker_NeedAdmonishing</workerClass>
		<stages>
		  <li>
			<label>need admonishing</label>
			<description>Subjugated lady needs adminishing</description>
			<baseMoodEffect>-1</baseMoodEffect>
		  </li>
		</stages>
    </ThoughtDef>
	<ThoughtDef>
		<defName>UnsubjugatedWomen</defName>
		<workerClass>Subjugate.ThoughtWorker_UnsubjugatedWomen</workerClass>
		<stages>
		  <li>
			<label>has unsubjugated women</label>
			<description>There are unsubjugated women</description>
			<baseMoodEffect>-3</baseMoodEffect>
		  </li>
		</stages>
    </ThoughtDef>
	<ThoughtDef>
		<defName>AllWomenSlaves</defName>
		<workerClass>Subjugate.ThoughtWorker_AllWomenSlaves</workerClass>
		<stages>
		  <li>
			<label>all women are slaves</label>
			<description>All women subjugated</description>
			<baseMoodEffect>1</baseMoodEffect>
		  </li>
		</stages>
    </ThoughtDef>
	<ThoughtDef>
		<defName>DisciplinedAWomen</defName>
		<workerClass>Subjugate.ThoughtWorker_RecentlyDisciplinedAWoman</workerClass>
		<stages>
		  <li>
			<label>recently disciplined a woman</label>
			<description>Recently disciplined a woman</description>
			<baseMoodEffect>1</baseMoodEffect>
		  </li>
		</stages>
    </ThoughtDef>


	<TraitDef>
		<defName>Subjugated</defName>
		<commonality>0.00</commonality>
		<commonalityFemale>0.01</commonalityFemale>
		<degreeDatas>
			<li>
				<label>Subjugated</label>
				<description>[PAWN_nameDef] was subjugated as a result she gained .</description>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>DislikesMen</li>
			<li>DislikesWomen</li>
		</conflictingTraits>
	</TraitDef>
	
</Defs>